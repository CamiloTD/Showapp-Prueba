@require './theme.styl';

$BorderColor = $BodyInputBorderColor
$InputBackground = $BodyInputBackground

.body-main
    display: grid
    margin-left: 42px
    padding-top: 48px
    grid-template-rows: 52px 118px 64px auto

    .description
        font-family: $MainFont
        font-weight: bold
        color: $FontColor
    
    .menu
        display: grid
        grid-template-columns: 101px 238px
        grid-auto-rows: 25px auto
        grid-column-gap: 69px

        label
            font-family: $MainFont
            font-size: 12px
            font-weight: bold

            color: $FontColor
        
        .select
            height: 30px
            border-radius: 3px
            border: 1px solid $BorderColor
            background: $InputBackground
            display: grid
            grid-template-columns: auto 26px
            grid-template-rows: 30px auto
            align-items: center
            cursor: pointer

            svg
                display: grid
                align-items: right

            .option
                margin-left: 16px
            
            .options
                position: relative
                border-radius: 4px
                box-shadow: 0px 0px 8px rgba(130, 130, 130, .5)
                grid-column: 1 / 3
                margin-top: 17px
                overflow: auto
                height: 50vh
                    
                .option
                    color: $FontColor
                    font-size: 12px
                    font-family: $MainFont
                    display: grid
                    align-items: center
                    height: 30px
                    margin-left: 0px
                    padding-left: 16px
                    background: white
                
                    &:hover
                        background: $SearchBackground
        
            .placeholder, .active
                font-style: italic
                color: $FontColor
                font-family: $MainFont
                font-size: 12px
            
            .active
                font-style: normal
    
    .content
        display: grid
        grid-template-columns: repeat(auto-fit, minmax(460px, 1fr))
        grid-gap: 20px
        margin-right: 42px